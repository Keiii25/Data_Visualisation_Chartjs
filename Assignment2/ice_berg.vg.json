{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "projection": { "type": "equalEarth" },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Keiii25/FIT3179_Assignment2/main/Assignment2/spatial_ice.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_glaciated_areas" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Keiii25/FIT3179_Assignment2/main/Assignment2/ice_berg_location.csv"
      },
      "mark": { "type": "circle" },
      "encoding": {
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "size": { "field": "Area", "legend": null },
        "color": { "field": "Iceberg", "legend": null }
      }
    }
  ]
}
