{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,

  "projection": { "type": "equirectangular" },

  "params": [
    {
      "name": "Year",
      "value": 2020,
      "bind": {
        "input": "range",
        "min": 1900,
        "max": 2020,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Keiii25/FIT3179_Assignment2/main/Assignment2/spatial_ice.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_glaciated_areas" }
      },
      "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Keiii25/FIT3179_Assignment2/main/Assignment2/ice_berg_location.csv"
      },
      "transform": [{ "filter": "datum.Year == Year" }],
      "mark": { "type": "circle" },
      "encoding": {
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "size": {
          "field": "Area",
          "legend": null,
          "scale": {
            "type": "threshold",
            "domain": [10, 50, 100, 200],
            "range": [20, 50, 100, 200, 300]
          }
        },
        "color": { "field": "Iceberg", "legend": null },
        "tooltip": [{ "field": "Iceberg" }, { "field": "Area" }]
      }
    }
  ]
}
