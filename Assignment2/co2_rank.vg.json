{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Keiii25/FIT3179_Assignment2/main/Assignment2/co2_full.csv"
  },
  "mark": { "type": "line" },
  "encoding": {
    "x": { "field": "Year", "type": "ordinal" },
    "y": { "field": "rank", "type": "ordinal", "sort": "ascending" }
  },
  "transform": [
    { "filter": "datum.Code != ''" },
    {
      "calculate": "toNumber(datum['Annual CO2 emissions (per capita)'])",
      "as": "co2"
    },
    {
      "window": [
        {
          "op": "rank",
          "as": "rank"
        }
      ],
      "sort": [{ "field": "co2", "order": "descending" }],
      "groupby": ["Year"]
    },
    { "calculate": "toNumber(datum.rank)", "as": "rank" },
    { "filter": "datum.Year >= 2000" },
    { "filter": "datum.rank <= 10" }
  ],
  "layer": [
    {
      "mark": { "type": "line", "interpolate": "monotone" },
      "encoding": {
        "color": { "field": "Entity", "type": "nominal" },
        "size": {
          "condition": { "param": "sel_brand_leg", "empty": false, "value": 0 },
          "value": 1
        },
        "tooltip": [
          { "field": "Entity", "type": "nominal" },
          {
            "field": "Annual CO2 emissions (per capita)",
            "type": "quantitative"
          }
        ]
      }
    },
    {
      "params": [
        {
          "name": "sel_brand_leg",
          "select": { "type": "point", "on": "click", "fields": ["Entity"] },
          "bind": "legend"
        }
      ],
      "mark": { "type": "tick", "thickness": 5, "orient": "horizontal" },
      "encoding": {
        "color": {
          "condition": {
            "param": "sel_brand_leg",
            "empty": false,
            "value": "black"
          },
          "field": "Entity"
        },
        "tooltip": [
          { "field": "Entity" },
          {
            "field": "Annual CO2 emissions (per capita)",
            "type": "quantitative"
          }
        ]
      }
    }
  ]
}
