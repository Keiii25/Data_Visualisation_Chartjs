{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data" : {
      "url" : "https://raw.githubusercontent.com/Keiii25/FIT3179_Assignment2/main/Assignment2/global_land_ocean_temperature.csv"
    },
    "layer" : [
      {
        "mark" : {"type": "bar"},
        "transform": [{"filter": "datum.year >= 1900"}],
        "encoding" : {
          "x": {
            "field": "year",
            "type": "ordinal",
            "title": "Year"
          },
          "y" : {
            "field": "Annual_mean",
            "type": "quantitative",
            "title": "Global Ocean to Land Temperature Index"
          }
        }
      },
      {
        "mark" : {"type": "line"},
        "transform": [{"filter": "datum.year >= 1900"}],
        "encoding" : {
          "x": {
            "field": "year",
            "type": "ordinal",
            "title": "Year",
          },
          "y" : {
            "field": "Lowess(5)",
            "type": "quantitative",
            "title": "Lowess(5)"
          }
        }
      }
    ]
  }