{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "data" : {
    "url" : "https://raw.githubusercontent.com/Keiii25/FIT3179_Assignment2/main/Assignment2/global_temperature_anomaly.csv"
  },
  "layer" : [
    {
      "mark" : {"type": "bar"},
      "transform": [{"filter": "datum.Year >= 1900"}],
      "encoding" : {
        "x": {
          "bin": {"binned": true, "step": 0.1},
          "field": "Year",
          "type": "ordinal",
          "axis": null
        },
        "y" : {
          "field": "Value",
          "type": "quantitative",
          "title": "Global Ocean to Land Temperature Index"
        },
        "tooltip": [
          {"field": "Year"},
          {"field": "Value", "title": "Global Tempetaure Anomoly of Land and Ocean"}
        ]
      }
    }
  ]
}